@model IEnumerable<WebApplication1.Models.Book>

@{
    ViewData["Title"] = "Books List";
}

<h4>Books List</h4>
<hr />

<!-- Affichage du message d'erreur s'il existe -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Description</td>
                <td>
                @if (book.Author != null)
                    {
                        @book.Author.AuthorName
                    }
                    else
                    {
                        <span>Author not available</span> <!-- Texte Ã  afficher si Author est null -->
                    }
                </td> 
                <td>
                    <a asp-action="Details" asp-route-id="@book.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@book.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@book.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create">Create New Book</a>
</div>
