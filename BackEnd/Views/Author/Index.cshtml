@model IEnumerable<WebApplication1.Models.Author>

@{
    ViewData["Title"] = "Authors List";
}

<h4>Authors List</h4>
<hr />

<!-- Affichage du message d'erreur s'il existe -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Author Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Id</td>
                <td>@author.AuthorName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@author.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@author.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@author.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create">Create New Author</a>
</div>
